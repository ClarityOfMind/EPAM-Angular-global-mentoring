.login-page {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--pale-grey);
    padding-top: 10%;

    &__window {
        display: flex;
        justify-content: space-between;
        flex-direction: column;
        width: 368px;
        height: 298px;
        padding: 24px;
        background-color: var(--white);
        border-radius: 6px;
        box-shadow: 0 1px 24px 0 rgba(18, 21, 35, 0.08);
    }

    &__title {
        color: var(--dark);
    }

    &__form {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 196px;
    }

    &__field {
        height: 62px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    &__label {
        position: relative;
        font-size: 14px;
        font-weight: 600;
        color: var(--slate-gray);
        letter-spacing: 0.22px;

        &::after {
            content: '*required';
            display: inline-block;
            position: absolute;
            right: 0;
            font-size: 12px;
            color: var(--battleship-grey);
        }
    }

    &__input {
        height 36px;
        padding-left: 12px;
        border-radius: 3px;
        border: 1px solid var(--light-gray);

        &::placeholder {
            color: var(--silver);
        }
    }

    &__submit-button {
        width: 68px;
        color: var(--cool-gray);
        padding: 10px 0;
    }

    &__pass-res-link {
        font-size: 12px;
        color: var(--soft-blue-two);
    }
}